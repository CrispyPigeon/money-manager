<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_general"
    android:layout_marginVertical="@dimen/margin_general_tiny"
    android:background="@drawable/background_choose_item"
    android:paddingHorizontal="@dimen/padding_wallet_item_horizontal"
    android:paddingVertical="@dimen/margin_general_medium">

    <TextView
        android:id="@+id/text_view_amount"
        style="@style/TextView.Header.Item.Amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/wallet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_name"
        style="@style/TextView.Header.Item.Amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_general"
        android:text="@string/wallet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_view_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>