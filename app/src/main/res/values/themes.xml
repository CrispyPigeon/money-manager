<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="Base.Theme.Moneymanager" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorControlNormal">@color/cursor</item>
        <item name="android:colorControlActivated">@color/cursor</item>
        <item name="android:colorControlHighlight">@color/cursor</item>
    </style>

    <style name="Theme.Moneymanager" parent="Base.Theme.Moneymanager" />

    <style name="MyAlertDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- TextView styles -->

    <style name="TextView" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/lato_400</item>
        <item name="android:textColor">@color/field_text</item>
    </style>

    <style name="TextView.Header">
        <item name="fontFamily">@font/lato_600</item>
        <item name="android:textSize">@dimen/textsize_header_1</item>
    </style>

    <style name="TextView.Hint">
        <item name="android:textSize">@dimen/textsize_standard</item>
        <item name="android:textColor">@color/field_text_highlight</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextView.Hint.2">
        <item name="fontFamily">@font/lato_600</item>
        <item name="android:textColor">@color/field_text_positive</item>
    </style>

    <style name="TextView.DialogDescription">
        <item name="android:textSize">@dimen/textsize_dialog_description</item>
    </style>

    <!-- EditText styles -->

    <style name="EditText">
        <item name="fontFamily">@font/lato_400</item>
        <item name="android:textSize">@dimen/textsize_standard</item>
        <item name="android:textColor">@color/field_text</item>
        <item name="android:textColorHint">@color/field_text_place_holder</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/background_entry</item>
    </style>

    <!-- Button styles -->

    <style name="ButtonAccept">
        <item name="fontFamily">@font/lato_600</item>
        <item name="android:textSize">@dimen/textsize_standard</item>
        <item name="android:textColor">@color/selector_text_color</item>
        <item name="android:background">@drawable/selector_button_background</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>