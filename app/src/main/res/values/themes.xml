<resources>

    <!-- Base application theme. -->

    <style name="Base.Theme.Moneymanager" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorControlNormal">@color/cursor</item>
        <item name="android:colorControlActivated">@color/cursor</item>
        <item name="android:colorControlHighlight">@color/cursor</item>
    </style>

    <style name="Theme.Moneymanager" parent="Base.Theme.Moneymanager" />

    <!-- App bar styles -->

    <style name="TextExpandedAppBar" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/field_text_positive</item>
        <item name="android:fontFamily">@font/lato_600</item>
    </style>

    <style name="TextCollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/field_text_positive</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/lato_400</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <!-- Dialogs styles -->

    <style name="MyAlertDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- TextView styles -->

    <style name="TextView" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/lato_400</item>
        <item name="android:textColor">@color/field_text</item>
    </style>

    <style name="TextView.Header">
        <item name="fontFamily">@font/lato_600</item>
        <item name="android:textSize">@dimen/textsize_header_1</item>
    </style>

    <style name="TextView.Header.Balance">
        <item name="android:textSize">@dimen/textsize_wallet_balance</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="TextView.Header.Balance.2">
        <item name="android:textSize">@dimen/textsize_wallet_balance_2</item>
    </style>

    <style name="TextView.Header.Item">
        <item name="android:textSize">@dimen/textsize_standard</item>
    </style>

    <style name="TextView.Header.Item.Amount">
        <item name="android:textSize">@dimen/textsize_statistic</item>
    </style>

    <style name="TextView.Hint">
        <item name="android:textSize">@dimen/textsize_standard</item>
        <item name="android:textColor">@color/field_text_highlight</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextView.Hint.2">
        <item name="fontFamily">@font/lato_600</item>
        <item name="android:textColor">@color/field_text_positive</item>
    </style>

    <style name="TextView.DialogDescription">
        <item name="android:textSize">@dimen/textsize_dialog_description</item>
    </style>

    <style name="TextView.WalletTitle">
        <item name="android:textSize">@dimen/textsize_wallet_title</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="TextView.StatisticItemPercentage">
        <item name="android:textSize">@dimen/textsize_statistic_percent</item>
        <item name="android:textColor">@color/field_text_highlight</item>
    </style>

    <!-- EditText styles -->

    <style name="EditText">
        <item name="fontFamily">@font/lato_400</item>
        <item name="android:textSize">@dimen/textsize_standard</item>
        <item name="android:textColor">@color/field_text</item>
        <item name="android:textColorHint">@color/field_text_place_holder</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/background_entry</item>
    </style>

    <!-- Image styles-->

    <style name="ImageViewBackButton">
        <item name="android:src">@drawable/ic_arrow_back</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- Button styles -->

    <style name="Button">
        <item name="fontFamily">@font/lato_600</item>
        <item name="android:textSize">@dimen/textsize_standard</item>
        <item name="android:textColor">@color/selector_text_color</item>
        <item name="android:background">@drawable/selector_button_active_background</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Accept">
        <item name="android:background">@drawable/selector_button_active_background</item>
    </style>

    <style name="Button.Remove">
        <item name="android:background">@drawable/selector_button_remove_background</item>
    </style>

</resources>